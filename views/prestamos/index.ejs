<%- include('../layouts/header') %>

<div class="page-header">
    <h1><%= title %></h1>
    <div class="header-actions">
        <a href="/prestamos/crear" class="btn btn-primary">Registrar Préstamo</a>
        <a href="/prestamos/activos" class="btn btn-info">Ver Activos</a>
        <a href="/prestamos/atrasados" class="btn btn-warning">Ver Atrasados</a>
    </div>
</div>

<% if (prestamos && prestamos.length > 0) { %>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Libro</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Días Retraso</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% prestamos.forEach(prestamo => { %>
        <tr>
            <td><%= prestamo.id %></td>
            <td><%= prestamo.usuario %></td>
            <td><%= prestamo.libro %></td>
            <td><%= new Date(prestamo.fecha_prestamo).toLocaleDateString('es-GT') %></td>
            <td><%= new Date(prestamo.fecha_devolucion_esperada).toLocaleDateString('es-GT') %></td>
            <td>
                <% if (prestamo.dias_retraso > 0) { %>
                    <span class="text-danger"><%= prestamo.dias_retraso %> días</span>
                <% } else { %>
                    <span class="text-success">A tiempo</span>
                <% } %>
            </td>
            <td><span class="badge badge-<%= prestamo.estado %>"><%= prestamo.estado %></span></td>
            <td class="actions">
                <a href="/prestamos/detalle/<%= prestamo.id %>" class="btn btn-sm btn-info">Ver</a>
                <% if (prestamo.estado === 'activo') { %>
                <form action="/prestamos/eliminar/<%= prestamo.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro de eliminar este préstamo?')">Eliminar</button>
                </form>
                <% } %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } else { %>
<div class="alert alert-info">
    <p>No hay préstamos registrados.</p>
    <a href="/prestamos/crear" class="btn btn-primary">Registrar el primer préstamo</a>
</div>
<% } %>

<%- include('../layouts/footer') %>
